<div class='the-user-wrapper position-relative'>
  <div class="user-inner">

    <%= cl_image_tag @user.photo.key, width: 100, height: 50, class: "avatar" %>
    <h1> <%= @user.username %></h1>
    <% if @user == current_user  %>
      <span> <%= link_to "Edit", edit_user_registration_path(current_user), class: "text-dark third-crypto-btn" %> </span>
    <% end %>
    <p class="user_bio"><%= @user.bio %> </p>

    <p> <%= @user.username %>  has <%= @user.recos %> recos, and its favourites cryptos are:
      <ul>
      <% @user.likes.each do |like| %>
        <li><%= link_to like.crypto.name, crypto_path(like.crypto) %></li>
      <% end %>
      </ul>
    </p>
  </div>
</div>
