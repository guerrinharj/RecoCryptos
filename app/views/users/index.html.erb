
<table>
  <tr>
    <th> Pos. </th>
    <th> User </th>
    <th> Recos </th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td>  <%= (@users.index(user) + 1) %> </td>
    <td> <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
    <td> <%= user.recos %> </td>
  </tr>
  <% end %>
</table>
